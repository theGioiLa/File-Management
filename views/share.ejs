<body class="">
    <h1 id="timeRemain"></h1>
    <button id="btnShow">Show</button>
    <div id="content">
    </div>
  <script>
      let expiresIn = parseInt(`<%- decode.exp %>`);
      console.log('<%- readStream %>');

      setInterval(showTimeRemain, 1000);
      function showTimeRemain() {
          let timeRemain = expiresIn - Date.now()/1000;
          let hour = Math.floor(timeRemain/3600);
          let min = Math.floor((timeRemain - hour*3600)/60);
          let second = Math.floor(timeRemain - hour*3600 - min*60);
        $("#timeRemain").text(`${hour}h ${min}m ${second}s`);
      }

  </script>
</body>

